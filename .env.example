# .env.example - Copy to .env and fill in your values

# ==================== DEPLOYMENT ====================
# WARNING: Never commit your actual .env file!

# Deployer Wallet (must be funded with ETH for gas)
DEPLOYER_PRIVATE_KEY=0x1234567890abcdef...  # Your private key (64 hex chars)

# RPC Endpoints
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Block Explorer API Keys (for contract verification)
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY
ARBISCAN_API_KEY=YOUR_ARBISCAN_API_KEY

# ==================== CONSTRUCTOR ARGUMENTS ====================
# Multi-sig Treasury Wallet (CRITICAL: Use Gnosis Safe or similar)
TREASURY_ADDRESS=0x0000000000000000000000000000000000000000

# ZK Verifier Contract (deploy first or use existing)
ZK_VERIFIER_ADDRESS=0x0000000000000000000000000000000000000000

# Sphinx Token Contract (deploy first or use existing)
SPHINX_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000

# OpenSea Proxy (use official OpenSea proxy for each network)
# Ethereum: 0xa5409ec958c83c3f309868babaca7c86dcb077c1
# Polygon: 0x58807baD0B376efc12F5AD86aAc70E78ed67deaE
OPENSEA_PROXY_ADDRESS=0x0000000000000000000000000000000000000000

# ==================== API & BACKEND ====================
JWT_SECRET=  # Generate with: openssl rand -hex 32
DATABASE_URL=postgresql://user:password@host:5432/database
REDIS_URL=redis://localhost:6379
SENTRY_DSN=https://your-sentry-dsn

# Environment (mainnet, testnet, local)
ENVIRONMENT=mainnet

# Auto-confirm deployments (set to "yes" for CI/CD)
AUTO_CONFIRM=no
